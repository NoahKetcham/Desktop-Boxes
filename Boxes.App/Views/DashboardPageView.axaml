<UserControl x:Name="DashboardView"
             xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:Boxes.App.ViewModels"
             x:Class="Boxes.App.Views.DashboardPageView"
             x:DataType="vm:DashboardPageViewModel"
             mc:Ignorable="d">

    <Design.DataContext>
        <vm:DashboardPageViewModel/>
    </Design.DataContext>

    <UserControl.Styles>
        <Style Selector="ToggleButton.circle-tab">
            <Setter Property="Width" Value="40"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="CornerRadius" Value="20"/>
            <Setter Property="Background" Value="{DynamicResource ThemeBackgroundBrush}"/>
            <Setter Property="Foreground" Value="{DynamicResource ThemeForegroundBrush}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource ThemeBorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>
        <Style Selector="ToggleButton.circle-tab:checked">
            <Setter Property="Background" Value="{DynamicResource ThemeAccentBrush}"/>
            <Setter Property="Foreground" Value="{DynamicResource ThemeForegroundBrush}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource ThemeAccentBrush}"/>
        </Style>
    </UserControl.Styles>

    <Grid ColumnDefinitions="Auto,*">
        <StackPanel Orientation="Vertical" Spacing="12" VerticalAlignment="Center" Grid.Column="0" Margin="0,24,16,24">
            <ToggleButton Classes="circle-tab"
                          IsChecked="{Binding IsBoxTabSelected}"
                          Command="{Binding SetTabCommand}"
                          CommandParameter="{x:Static vm:DashboardTab.BoxManager}"
                          ToolTip.Tip="Manage Boxes">
                <TextBlock Text="B" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </ToggleButton>
            <ToggleButton Classes="circle-tab"
                          IsChecked="{Binding IsScanTabSelected}"
                          Command="{Binding SetTabCommand}"
                          CommandParameter="{x:Static vm:DashboardTab.ScanDesktop}"
                          ToolTip.Tip="Scan Desktop">
                <TextBlock Text="S" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </ToggleButton>
        </StackPanel>

        <ScrollViewer Name="ScrollViewer" Grid.Column="1" Margin="0" VerticalScrollBarVisibility="Auto" PointerWheelChanged="ScrollViewer_OnPointerWheelChanged">
            <StackPanel Spacing="24">
                <StackPanel Spacing="4">
                    <TextBlock Text="Dashboard" FontSize="24" FontWeight="Bold"/>
                    <TextBlock Text="Manage your desktop boxes" Opacity="0.7"/>
                </StackPanel>

                <StackPanel Spacing="24" Name="BoxSection" IsVisible="{Binding IsBoxTabSelected}">
                    <StackPanel Orientation="Horizontal" Spacing="12">
                        <Button Content="New Box" Command="{Binding NewBoxCommand}"/>
                        <Button Content="Edit" Command="{Binding EditBoxCommand}"/>
                        <Button Content="Delete" Command="{Binding DeleteBoxCommand}" Foreground="#FF5555"/>
                    </StackPanel>

                    <ListBox ItemsSource="{Binding Boxes}" SelectedItem="{Binding SelectedBox, Mode=TwoWay}" BorderThickness="0" Background="Transparent">
                        <ListBox.ItemTemplate>
                            <DataTemplate x:DataType="vm:BoxSummaryViewModel">
                                <Border Background="#141B2D" CornerRadius="12" Padding="16" Margin="0,0,0,12">
                                    <Grid ColumnDefinitions="*,Auto" VerticalAlignment="Center">
                                        <StackPanel>
                                            <TextBlock Text="{Binding Name}" FontWeight="SemiBold" FontSize="16"/>
                                            <TextBlock Text="{Binding Description}" Opacity="0.75" FontSize="12"/>
                                        </StackPanel>
                                        <StackPanel Orientation="Horizontal" Spacing="12" Grid.Column="1" VerticalAlignment="Center">
                                            <TextBlock Text="{Binding ItemCount}" FontSize="20" FontWeight="Bold"/>
                                            <Button Content="Open" Command="{Binding DataContext.OpenBoxCommand, ElementName=DashboardView}" CommandParameter="{Binding}"/>
                                            <Button Content="Edit" Command="{Binding DataContext.EditBoxCommand, ElementName=DashboardView}" CommandParameter="{Binding}"/>
                                            <Button Content="Delete" Foreground="#FF5555" Command="{Binding DataContext.DeleteBoxCommand, ElementName=DashboardView}" CommandParameter="{Binding}"/>
                                        </StackPanel>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </StackPanel>

                <Border Name="ScanResultsCard" Background="#141B2D" CornerRadius="12" Padding="16" IsVisible="{Binding IsScanTabSelected}">
                    <StackPanel Spacing="12">
                        <Grid ColumnDefinitions="*,Auto">
                            <StackPanel Spacing="4">
                                <TextBlock Text="Scan Desktop" FontSize="18" FontWeight="SemiBold"/>
                                <TextBlock Text="Find all files on your desktop to organize them." Opacity="0.7"/>
                            </StackPanel>
                            <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="8">
                                <Button Content="Scan Now" Command="{Binding ScanDesktopCommand}"/>
                                <Button Content="Create Shortcuts" IsEnabled="{Binding HasScannedFiles}" Click="CreateShortcutsButton_OnClick"/>
                            </StackPanel>
                        </Grid>

                        <ItemsControl ItemsSource="{Binding ScannedFiles}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <WrapPanel />
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate x:DataType="vm:DesktopFileViewModel">
                                    <Border Width="120" Height="100" Background="#232B46" CornerRadius="8" Padding="8" Margin="4">
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="*"/>
                                            </Grid.RowDefinitions>
                                            <Button Content="Ã—" Width="20" Height="20" HorizontalAlignment="Right" Command="{Binding DataContext.RemoveScannedFileCommand, ElementName=DashboardView}" CommandParameter="{Binding}"/>
                                            <TextBlock Grid.Row="1" Text="{Binding FileName}" TextWrapping="Wrap" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>

