<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:Boxes.App.ViewModels"
        x:Class="Boxes.App.Views.Dialogs.ShortcutSelectionDialog"
        x:DataType="vm:ShortcutSelectionViewModel"
        Width="480"
        Height="360"
        CanResize="True"
        WindowStartupLocation="CenterOwner">
    <Border Padding="16" Background="{DynamicResource ThemeBackgroundBrush}">
        <Grid RowDefinitions="Auto,*,Auto" RowSpacing="16">
            <StackPanel Spacing="4">
                <TextBlock Text="Box Settings" FontSize="16" FontWeight="SemiBold"/>
                <TextBlock Text="Box: {Binding BoxName}" Opacity="0.8"/>
            </StackPanel>
            <ScrollViewer Grid.Row="1">
                <StackPanel>
                    <Button Content="Snap to taskbar" Command="{Binding SnapToTaskbarCommand}" Margin="0,0,0,12"/>
                    <StackPanel Orientation="Horizontal" Spacing="8" Margin="0,0,0,12">
                        <Button Content="Home" Command="{Binding NavigateHomeCommand}"/>
                        <Button Content="Up" Command="{Binding NavigateUpCommand}"/>
                        <TextBlock Text="{Binding CurrentPath}" VerticalAlignment="Center"/>
                    </StackPanel>
                    <ItemsControl ItemsSource="{Binding CurrentItems}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel ItemWidth="120" ItemHeight="120" />
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate x:DataType="vm:ShortcutSelectionItemViewModel">
                                <ToggleButton IsChecked="{Binding IsSelected}" Width="120" Height="120" Margin="8" Background="#232B46" BorderBrush="#2D3654" BorderThickness="1" CornerRadius="8" DoubleTapped="ShortcutItem_OnDoubleTapped">
                                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Spacing="6">
                                        <Border Width="48" Height="48" Background="#101627" CornerRadius="4">
                                            <Image Source="{Binding Icon}" Width="48" Height="48" Stretch="Uniform"/>
                                        </Border>
                                        <TextBlock Text="{Binding FileName}" TextWrapping="Wrap" TextAlignment="Center" MaxWidth="96" FontSize="12" />
                                    </StackPanel>
                                </ToggleButton>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
            </ScrollViewer>
            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Spacing="8">
                <Button Content="Cancel" Command="{Binding CancelCommand}"/>
                <Button Content="Save" Command="{Binding SaveCommand}"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>
