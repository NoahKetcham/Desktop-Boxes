<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:vm="using:Boxes.App.ViewModels"
        x:Class="Boxes.App.Views.Dialogs.ConfirmDeleteWindow"
        x:DataType="vm:ConfirmDeleteDialogViewModel"
        Width="360"
        Height="220"
        Title="Delete box"
        WindowStartupLocation="CenterOwner">

    <Window.DataContext>
        <vm:ConfirmDeleteDialogViewModel/>
    </Window.DataContext>

    <Border Padding="24">
        <Grid RowDefinitions="Auto,*,Auto" RowSpacing="16">
            <StackPanel>
                <TextBlock Text="Remove this box?" FontSize="18" FontWeight="SemiBold"/>
                <TextBlock Text="You can recreate it later, but any saved layout settings will be cleared." Opacity="0.7" TextWrapping="Wrap"/>
            </StackPanel>

            <Border Grid.Row="1" Background="#141B2D" CornerRadius="12" Padding="16">
                <TextBlock Text="{Binding Message}" TextWrapping="Wrap"/>
            </Border>

            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Spacing="8">
                <Button Content="Cancel" Command="{Binding CancelCommand}"/>
                <Button Content="Delete" Command="{Binding ConfirmCommand}" Foreground="#FF5555"/>
            </StackPanel>
        </Grid>
    </Border>

</Window>

