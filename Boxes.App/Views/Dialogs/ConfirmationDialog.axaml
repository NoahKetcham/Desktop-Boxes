<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:Boxes.App.ViewModels"
        x:Class="Boxes.App.Views.Dialogs.ConfirmationDialog"
        x:DataType="vm:ConfirmationDialogViewModel"
        Width="360"
        Height="180"
        CanResize="False"
        WindowStartupLocation="CenterOwner">
    <Border Padding="16" Background="{DynamicResource ThemeBackgroundBrush}">
        <StackPanel Spacing="16">
            <TextBlock Text="{Binding Message}" TextWrapping="Wrap" FontSize="14"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Spacing="8">
                <Button Content="Cancel" Command="{Binding CancelCommand}"/>
                <Button Content="Confirm" Command="{Binding ConfirmCommand}"/>
            </StackPanel>
        </StackPanel>
    </Border>
</Window>
